#!/bin/bash

class(){
  name="$1"
  shift
  attr_defs=
  getter_defs=
  class_body='
    '"$name"'() {'
  local attr_index=1
  set -- 'name' "$@"
  nb_args="$#"
  while [ "$nb_args" -gt 0 ]; do
    case "$1" in
      _*)
        set -- "$@" "$1"
        ;;
      *)
        attr_defs="$attr_defs"'
        local '"$1"'='"'"'"'"'"'"''"$'"$attr_index"'"''"'"'"'"'"'"
        getter_defs="$getter_defs"'
      eval "$1"'"'_$1"'() {
        printf '"'"'"'"'"'%s\n'"'"'"'"'"' '"'"'"'"'"'"''"$'"$attr_index"'"''"'"'"'"'"'"'
      }'"'"
        attr_index="$((attr_index + 1))"
        ;;
    esac
    nb_args="$((nb_args - 1))"
    shift
  done
  for method do
    method_defs="$method_defs"'
      eval "$1"'"'"'_'"${method#_}"'() {'"$attr_defs"'
        '"$method"' "$@"
      }'"'"
  done
  class_body="$class_body"'
      eval '"'"''"$attr_defs"''"'"'
      '"$method_defs"'
      '"$getter_defs"'
      _'"$name"' "$@" 2> /dev/null || :
    }
  '
  eval "$class_body"
}
