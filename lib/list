#!/bin/sh

if ! . ./clash 2> /dev/null; then
  echo 'Could not locate clash'
  exit 1
fi >&2

# TODO could save some iterations by making use of the double link properties

class List_Node \
  value         \
  next          \
  previous      \

class List       \
  head_          \
  length_        \
  tail_          \
  _append        \
  _clear         \
  _get           \
  _index         \
  _insert        \
  _pop           \
  _pretty_print  \
  _remove        \
  _set           \

check_index_within_range() {
  # 1 -> index
  # 2 -> length
  if [ -z "$1" ] ||
     [ "$1" -ge "$2" ] ||
     [ "$1" -le -"$2" ]
  then
    printf 'Invalid index: %s\n' "$1"
    return 1
  fi >&2
}

List_append() {
  local List_Node_generated_name
  List_Node _ "$1" '' "$tail_"
  if [ "$length_" -eq 0 ]; then
    "$self"_head__is "$List_Node_generated_name"
  else
    "$tail_"_next_is "$List_Node_generated_name"
  fi
  "$self"_tail__is "$List_Node_generated_name"
  "$self"_length__is "$((length_ + 1))"
}

List_index() {
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    if [ "$("$node"_value; printf x)" = "$1"x ]; then
      printf '%s\n' "$index"
      return 0
    fi
    node="$("$node"_next)"
    index="$((index + 1))"
  done
  printf 'Value not found: %s\n' "$1" >&2
  return 1
}

List_get() {
  check_index_within_range "$1" "$length_" || return

  if [ "$1" -lt 0 ]; then
    target_index="$((length_ + $1))"
  else
    target_index="$1"
  fi
  index=0
  node="$head_"
  while [ "$index" -lt "$target_index" ]; do
    node="$("$node"_next)"
    index="$((index + 1))"
  done

  value="$("$node"_value; printf x)"
  value="${value%x}"
  printf %s "$value"
}

List_pretty_print() {
  printf '== %s == (length: %s, head: %s, tail: %s)
' "$self" "$length_" "$([ -n "$head_" ] && "$head_"_value)" \
                     "$([ -n "$tail_" ] && "$tail_"_value)"
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    value="$("$node"_value; printf x)"
    value="${value%x}"
    printf '%s: %s (%s)\n' "$index" "$value" "$node"
    node="$("$node"_next)"
    index="$((index + 1))"
  done
}

List_remove() {
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    if [ "$("$node"_value; printf x)" = "$1"x ]; then
      next_node="$("$node"_next)"
      if [ "$node" = "$tail_" ]; then
        "$self"_tail__is "$prev_node"
        "$prev_node"_next_is ''
      elif [ "$node" = "$head_" ]; then
        "$self"_head__is "$next_node"
        "$next_node"_previous_is ''
      else
        "$prev_node"_next_is "$next_node"
        "$next_node"_previous_is "$prev_node"
      fi
      del "$node"
      "$self"_length__is "$((length_ - 1))"
      return
    fi
    prev_node="$node"
    node="$("$node"_next)"
    index="$((index + 1))"
  done
  printf 'Value not found: %s\n' "$1" >&2
  return 1
}

List_pop() {
  set -- "${1-0}"
  check_index_within_range "$1" "$length_" || return

  if [ "$1" -lt 0 ]; then
    target_index="$((length_ + $1))"
  else
    target_index="$1"
  fi
  index=0
  node="$head_"
  while [ "$index" -lt "$target_index" ]; do
    prev_node="$node"
    node="$("$node"_next)"
    index="$((index + 1))"
  done

  next_node="$("$node"_next)"
  if [ "$node" = "$tail_" ]; then
    "$self"_tail__is "$prev_node"
    "$prev_node"_next_is ''
  elif [ "$node" = "$head_" ]; then
    "$self"_head__is "$next_node"
    "$next_node"_previous_is ''
  else
    "$prev_node"_next_is "$next_node"
    "$next_node"_previous_is "$prev_node"
  fi

  value="$("$node"_value; printf x)"
  value="${value%x}"
  "$self"_length__is "$((length_ - 1))"
  del "$node"
  printf %s "$value"
}

List_clear() {
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    next="$("$node"_next)"
    del "$node"
    node="$next"
    index="$((index + 1))"
  done
  "$self"_head__is ''
  "$self"_tail__is ''
  "$self"_length__is 0
}

List_insert() {
  check_index_within_range "$1" "$((length_ + 1))" || return
  if [ "$1" -lt 0 ]; then
    target_index="$((length_ + $1))"
  else
    target_index="$1"
  fi
  index=0
  node="$head_"
  prev_node=
  while [ "$index" -lt "$target_index" ]; do
    prev_node="$node"
    node="$("$node"_next)"
    index="$((index + 1))"
  done
  local List_Node_generated_name
  List_Node _ "$2" "$node" "$prev_node"
  if [ -n "$prev_node" ]; then
    "$prev_node"_next_is "$List_Node_generated_name"
  fi
  if [ "$prev_node" = "$tail_" ]; then
    "$self"_tail__is "$List_Node_generated_name"
  elif [ "$node" = "$head_" ]; then
    "$self"_head__is "$List_Node_generated_name"
  fi
  "$self"_length__is "$((length_ + 1))"
}

List_set() {
  check_index_within_range "$1" "$length_" || return

  if [ "$1" -lt 0 ]; then
    target_index="$((length_ + $1))"
  else
    target_index="$1"
  fi
  index=0
  node="$head_"
  while [ "$index" -lt "$target_index" ]; do
    node="$("$node"_next)"
    index="$((index + 1))"
  done

  "$node"_value_is "$2"
}

_List() {
  shift # name
  "$self"_length__is 0
  for value do
    "$self"_append "$value"
  done
}
