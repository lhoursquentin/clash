#!/bin/sh

if ! . ./clash 2> /dev/null; then
  echo 'Could not locate clash'
  exit 1
fi >&2

class Node \
  value    \
  next     \

class List       \
  head_          \
  tail_          \
  created_count_ \
  length_        \
  _append        \
  _clear         \
  _create_node   \
  _get           \
  _index         \
  _insert        \
  _length        \
  _pop           \
  _pretty_print  \
  _remove        \

check_index_within_range() {
  # 1 -> index
  # 2 -> length
  if [ -z "$1" ] ||
     [ "$1" -ge "$2" ] ||
     [ "$1" -le -"$2" ]
  then
    printf 'Invalid index: %s\n' "$1"
    return 1
  fi >&2
}

List_create_node() {
  # create a unique name
  new_node=List_"$name"_"$created_count_"
  "$self"_created_count__is "$((created_count_ + 1))"
  Node "$new_node" "$1" "$2"
}

List_append() {
  local new_node
  "$self"_create_node "$1"
  if [ "$length_" -eq 0 ]; then
    "$self"_head__is "$new_node"
  else
    "$tail_"_next_is "$new_node"
  fi
  "$self"_tail__is "$new_node"
  "$self"_length__is "$((length_ + 1))"
}

List_index() {
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    if [ "$("$node"_value; printf x)" = "$1"x ]; then
      printf '%s\n' "$index"
      return 0
    fi
    node="$("$node"_next)"
    index="$((index + 1))"
  done
  printf 'Value not found: %s\n' "$1" >&2
  return 1
}

List_get() {
  check_index_within_range "$1" "$length_" || return

  if [ "$1" -lt 0 ]; then
    target_index="$((length_ + $1))"
  else
    target_index="$1"
  fi
  index=0
  node="$head_"
  while [ "$index" -lt "$target_index" ]; do
    node="$("$node"_next)"
    index="$((index + 1))"
  done

  value="$("$node"_value; printf x)"
  value="${value%x}"
  printf '%s\n' "$value"
}

List_pretty_print() {
  printf '== %s == (length: %s, head: %s, tail: %s)
' "$self" "$length_" "$("$head_"_value)" "$("$tail_"_value)"
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    value="$("$node"_value; printf x)"
    value="${value%x}"
    printf '%s: %s\n' "$index" "$value"
    node="$("$node"_next)"
    index="$((index + 1))"
  done
}

List_remove() {
  index=0
  node="$head_"
  while [ "$index" -lt "$length_" ]; do
    if [ "$("$node"_value; printf x)" = "$1"x ]; then
      if [ "$node" = "$tail_" ]; then
        "$self"_tail__is "$prev"
        "$prev"_next_is ''
      elif [ "$node" = "$head_" ]; then
        "$self"_head__is "$("$node"_next)"
      else
        "$prev"_next_is "$("$node"_next)"
      fi
      # FIXME also delete object when supported by clash
      "$self"_length__is "$((length_ - 1))"
      return
    fi
    prev="$node"
    node="$("$node"_next)"
    index="$((index + 1))"
  done
  printf 'Value not found: %s\n' "$1" >&2
  return 1
}

List_pop() {
  :
}

List_clear() {
  :
}

List_insert() {
  check_index_within_range "$1" "$length_" || return
  index=0
  node="$head_"
  prev=
  while [ "$index" -lt "$1" ]; do
    prev="$node"
    node="$("$node"_next)"
    index="$((index + 1))"
  done
  local new_node
  "$self"_create_node "$2" "$node"
  if [ -n "$prev" ]; then
    "$prev"_next_is "$new_node"
  fi
  if [ "$prev" = "$tail_" ]; then
    "$self"_tail__is "$new_node"
  elif [ "$node" = "$head_" ]; then
    "$self"_head__is "$new_node"
  fi
  "$self"_length__is "$((length_ + 1))"
}

_List() {
  shift # name
  "$self"_length__is 0
  "$self"_created_count__is 0
  for value do
    "$self"_append "$value"
  done
}
